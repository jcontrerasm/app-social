{
  "compilerOptions": {
    "target": "es2015",
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./public/",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@app/*": ["*"]
    },
  },
  "include": [
    "./src/**/*"
  ],
  "exlude": [
    "./src/**/*",
    "./functions/*"
  ],
  "awesomeTypescriptLoaderOptions": {
    "transpileOnly": true,
  }
}
